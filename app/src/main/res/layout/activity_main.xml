<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonQR"
        android:layout_width="188dp"
        android:layout_height="109dp"
        android:layout_marginTop="144dp"
        android:text="@string/buttonQRText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCheck"
        android:layout_width="188dp"
        android:layout_height="109dp"
        android:layout_marginTop="16dp"
        android:text="@string/buttonCheckText"
        app:layout_constraintEnd_toEndOf="@+id/buttonQR"
        app:layout_constraintStart_toStartOf="@+id/buttonQR"
        app:layout_constraintTop_toBottomOf="@+id/buttonQR" />

    <Button
        android:id="@+id/buttonExpenses"
        android:layout_width="188dp"
        android:layout_height="109dp"
        android:layout_marginTop="16dp"
        android:text="@string/buttonExpenses"
        app:layout_constraintEnd_toEndOf="@+id/buttonCheck"
        app:layout_constraintStart_toStartOf="@+id/buttonCheck"
        app:layout_constraintTop_toBottomOf="@+id/buttonCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>